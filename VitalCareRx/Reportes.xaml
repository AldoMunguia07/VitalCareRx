        <Label Content="Reportes pacientes" HorizontalAlignment="Left" Height="28" HorizontalContentAlignment="Center" Margin="113,103,0,0" VerticalAlignment="Top" Width="318" FontSize="14" Foreground="#DDF9F9F9" Background="#1c1c1c"/>
        <materialDesign:PackIcon Kind="people" Height="82" Width="97" VerticalAlignment="Center" Margin="312,134,0,366" />
        <Label Content="Contiene toda la información" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="146,150,0,0"/>
