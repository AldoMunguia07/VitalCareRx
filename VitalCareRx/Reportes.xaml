            </materialDesign:Card.Background>
            <Button  Name="btnConsultasReporte" Content="Ver reporte" HorizontalAlignment="Left" Margin="41,89,0,0" VerticalAlignment="Top" Width="129" Height="31" Background="#1c1c1c" Click="btnConsultasReporte_Click"/>
