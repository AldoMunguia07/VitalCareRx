        <StackPanel HorizontalAlignment="Left" Height="51" Margin="0,531,0,0" VerticalAlignment="Top" Width="1000" Background="#1C1C1C"/>
        <Button x:Name="btnCerrar" Height="Auto" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Foreground="Red" Click="btnCerrar_Click" Margin="942,-6,0,532">
            <materialDesign:PackIcon Kind="CloseCircleOutline" Height="30" Width="30" RenderTransformOrigin="0.352,0.42" />
        </Button>


    </Grid>
</Window>
