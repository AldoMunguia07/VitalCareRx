                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#74EEAB" Offset="0.8"/>
                    <GradientStop Color="#1c1c1c"/>
                </LinearGradientBrush>
            </materialDesign:Card.Background>
            <Button Name="btnFarmacosReporte" Content="Ver reportes" HorizontalAlignment="Left" Margin="41,89,0,0" VerticalAlignment="Top" Width="129" Height="31" Background="#23852e" Click="btnFarmacosReporte_Click"/>
