        xmlns:local="clr-namespace:VitalCareRx"
        mc:Ignorable="d"
        Title="Reportes" Height="582" Width="1000"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" MouseDown="Window_MouseDown"
