        <Label Content="Reportes fármacos"  HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="28" Margin="108,336,0,0" VerticalAlignment="Top" Width="316" FontSize="14" Foreground="#DDF9F9F9" Background="#1c1c1c"/>
